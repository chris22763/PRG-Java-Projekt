

private class MausManager implements MouseListener, MouseMotionListener {
	public void MausClicked (MouseEvent event) {
		statusbar.setText(String.format ( "Clicked at %a,%d", event.getX(), event.getY()));
	}
	public void mousePressed (MouseEvent event){
		statusbar.setText ( "Du hast die Maus gedrÃ¼ckt.");
	}
	public void mouseReleased (MouseEvent event){
		statusbar.setText ( "Du hast die maus losgelassen.");
	}
	public void mouseEntered (MouseEvent event){
		statusbar.setText ( "Du bist im Fenster");
		mousepanel.setBackground (Color.RED);
	}
	public void mouseExited (MouseEvent event){
		statusbar.setText ( "Du hast das Fenster Verlassen.");
		mousepanel.setBackground (Color.WHITE);
	}
	
// 

	public void mouseMoved(MouseEvent event) {
       saySomething("Mouse moved", e);
    }

	void saySomething(String eventDescription, MouseEvent event) {
        textArea.append (eventDescription								        // z = "Start" -> z.append("le") = "Startle" , z.insert(4, "le")
        				 + " (" + event.getX() 						             	//
        				 + "," 	+ event.getY() + ")" + " detected on " 	//
        				 + event.getComponent().getClass().getName()	  //
        				 + newline);
    }
}
